{
  "name": "react-use-sse-event",
  "version": "0.2.0",
  "description": "React hook for EventSource (SSE) with auto-reconnect, JSON parse, and subscribe API.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "clean": "rimraf dist",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "sse",
    "eventsource",
    "hook",
    "useSSE",
    "react-use-sse-event",
    "react-sse"
  ],
  "author": "Minbyeonghyeon",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.5.0",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "event-source-polyfill": "^1.0.31"
  }
}
